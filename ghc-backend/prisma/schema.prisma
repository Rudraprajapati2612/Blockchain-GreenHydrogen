generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id              String                 @id @default(uuid())
  name            String? 
  email           String                 @unique
  password        String?                // null For Google
  authProvider    AuthProvider            @default(LOCAL)
  status          UserStatus              @default(PENDING)
  role            Role    
  createdAt       DateTime               @default(now())
  updatedAt       DateTime               @updatedAt
  kyc             Kyc?
  batches         Batch[]                @relation("ProducerBatches")
  certifications   Batch[]                @relation("CertifierBatch")
}   



model Kyc {
  id            String                   @id  @default(uuid())
  usedId        String                   @unique
  user          User                     @relation(fields: [usedId],references: [id])

  Plantname     String?
  Location      String?
  document      String?
  ApprovedBy    String?   //super admin 
  ApprovedAt    DateTime
}

model Batch {
  id          String                    @id   @default(uuid())
  batchId     String                    @unique
  producerId  String
  certifierID String
  quantity    Int 
  metaDataURI String?
  timeStamp   DateTime                  @default(now())

  producer    User                      @relation("ProducerBatches",fields: [producerId], references: [id])
  certifier   User                      @relation("CertifierBatch",fields: [certifierID],references: [id])
}
enum  AuthProvider {
  LOCAL
  GOOGLE
}

enum Role {
  PRODUCER
  CONSUMER
  SUPER_ADMIN
  CERTIFIER
}


enum UserStatus {
  PENDING
  ACTIVE 
  REJECT
}
